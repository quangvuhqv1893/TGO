<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jbosscmp-jdbc PUBLIC "-//JBoss//DTD JBOSSCMP-JDBC 3.0//EN" "http://www.jboss.org/j2ee/dtd/jbosscmp-jdbc_3_0.dtd">

<jbosscmp-jdbc>
   <defaults>
     <datasource>java:/DefaultDS</datasource>
     <datasource-mapping>Hypersonic SQL</datasource-mapping>
   </defaults>

   <enterprise-beans>

      <entity>
         <ejb-name>simple/SimpleCMP</ejb-name>

         <cmp-field>
            <field-name>aByte</field-name>
            <column-name>aByte</column-name>
         </cmp-field>
         <cmp-field>
            <field-name>aChar</field-name>
            <column-name>aChar</column-name>
         </cmp-field>
         <cmp-field>
            <field-name>aDouble</field-name>
            <column-name>aDouble</column-name>
         </cmp-field>
         <cmp-field>
            <field-name>aFloat</field-name>
            <column-name>aFloat</column-name>
         </cmp-field>
         <cmp-field>
            <field-name>aLong</field-name>
            <column-name>aLong</column-name>
         </cmp-field>
         <cmp-field>
            <field-name>aShort</field-name>
            <column-name>aShort</column-name>
         </cmp-field>
         <cmp-field>
            <field-name>anInt</field-name>
            <column-name>anInt</column-name>
         </cmp-field>
         <cmp-field>
            <field-name>anObject</field-name>
            <column-name>anObject</column-name>
         </cmp-field>
         <cmp-field>
            <field-name>anObjectArray</field-name>
            <column-name>anObjectArray</column-name>
         </cmp-field>
         <cmp-field>
            <field-name>id</field-name>
            <column-name>id</column-name>
         </cmp-field>
         <cmp-field>
            <field-name>aBoolean</field-name>
            <column-name>aBoolean</column-name>
         </cmp-field>

      </entity>

   </enterprise-beans>

</jbosscmp-jdbc>
